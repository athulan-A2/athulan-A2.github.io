<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.kolukattaitv"
       name="Kolukattai TV"
       version="1.0.0"
       provider-name="Kolukattai">

    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="inputstream.adaptive" version="2.6.0" optional="true" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Kolukattai TV - Tamil serials and shows</summary>
        <summary lang="en_US">Kolukattai TV - Tamil serials and shows</summary>
        <description lang="en_GB">Simple video addon that lists the latest Tamil serial episodes and tries to play them.</description>
        <description lang="en_US">Simple video addon that lists the latest Tamil serial episodes and tries to play them.</description>
        <platform>all</platform>
        <language>en</language>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
    </extension>

</addon>

